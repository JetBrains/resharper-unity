<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net35</TargetFramework>
    <AssemblyName>JetBrains.Rider.Unity.Editor.Plugin</AssemblyName>
    <RootNamespace>JetBrains.Rider.Unity.Editor</RootNamespace>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>UNITY_4_7;RIDER_EDITOR_PLUGIN</DefineConstants>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AssemblyOriginatorKeyFile>..\..\sign.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.3" />
    <PackageReference Include="JetBrains.RdFramework" Version="193.20191030.267" />
    <PackageReference Include="JetBrains.Unity.Libs.4.7.2f1" Version="2017.7.21" />
    <PackageReference Include="ILRepack.Lib.MSBuild.Task" Version="2.0.18" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.1" />
  </ItemGroup>
  <ItemGroup>
    <ILRepackInputAssemblies Include="$(OutputPath)Newtonsoft.Json.dll">
      <Visible>false</Visible>
    </ILRepackInputAssemblies>
    <ILRepackInputAssemblies Include="../lib/*.dll">
      <Visible>false</Visible>
    </ILRepackInputAssemblies>
    <ILRepackInputAssemblies Include="$(OutputPath)Newtonsoft.Json.dll" />
    <ILRepackInputAssemblies Include="$(OutputPath)JetBrains.Lifetimes.dll" />
    <ILRepackInputAssemblies Include="$(OutputPath)JetBrains.RdFramework.dll" />
    <ILRepackInputAssemblies Include="$(OutputPath)AsyncBridge.Net35.dll" />
    <ILRepackInputAssemblies Include="$(OutputPath)JetBrains.Annotations.dll" />
    <ILRepackInputAssemblies Include="$(OutputPath)System.Threading.dll" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="AfterUnity56\**" />
    <None Remove="AfterUnity56\**" />
    <EmbeddedResource Remove="AfterUnity56\**" />
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="..\lib\pdb2mdb.exe" />
  </ItemGroup>
  
</Project>
