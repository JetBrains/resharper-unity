<Project>
  <Target Name="RiderILRepack" AfterTargets="Build">
    <ItemGroup>
      <InputAssemblies Include="$(OutputPath)$(AssemblyName).dll" />
      <InputAssemblies Include="$(OutputPath)Newtonsoft.Json.dll" />
      <InputAssemblies Include="../lib/*.dll" />
    </ItemGroup>
    <ItemGroup>
      <SearchDirectories Include="$(OutputPath)" />
    </ItemGroup>
    <ILRepack Parallel="true" Internalize="false" DebugInfo="true" InputAssemblies="@(InputAssemblies)" LibraryPath="@(SearchDirectories)" OutputFile="../../Assets/Plugins/Editor/JetBrains/$(AssemblyName).Repacked.dll" />
  </Target>
</Project>
